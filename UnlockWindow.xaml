<Window x:Class="MailApp.UnlockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailApp"
        mc:Ignorable="d"
        Title="UnlockWindow" Height="100" Width="150">
    <Grid>
        <StackPanel>
            <Label Content="Enter password to login: " />
            <PasswordBox x:Name="LocalLoginPasswdBox" />
            <StackPanel Orientation="Horizontal">
                <Button Content="Unlock" Width="75" Click="UnlockClick"/>
                <Button Content="Delete" Width="75" Click="DeleteClick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
