<Window x:Class="MailApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="220" Width="200">
    <Grid>
        <StackPanel>
            <Image x:Name="LogoImage" Source="/logo.ico" Height="50"/>

            <TextBlock Text="Login:" x:Name="LoginLabel"/>
            <TextBox x:Name="LoginBox" Text="" />
            
            <TextBlock Margin="0, 25, 0, 0" Text="Password:" />
            <PasswordBox x:Name="PasswdBox" Password="" />
            
            <CheckBox x:Name="SaveLogin" Content="Remember me" />
            <Button Content="Login" HorizontalAlignment="Center" Click="LoginClick"/>

        </StackPanel>
    </Grid>
</Window>
